@page
@model DSS.RazorWebApp.Pages.MainDiamondPage.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<p>
    @using (Html.BeginForm("/Index", "Home", FormMethod.Get))
    {
        <b>Search By: </b>
        @Html.RadioButton("SearchBy", "Name", true) <text>Name</text>
        @Html.RadioButton("SearchBy", "Origin") <text>Title</text>
        @Html.RadioButton("SearchBy", "Quantity") <text>Quantity</text>
        <br />
        @Html.TextBox("search", "", htmlAttributes: new { @class = "w-50 form-control" })
        <input class="btn btn-success" type="submit" value="Search" />
    }
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MainDiamond[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MainDiamond[0].Origin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MainDiamond[0].CaraWeight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MainDiamond[0].Clarity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MainDiamond[0].Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MainDiamond[0].Describe)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MainDiamond[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MainDiamond[0].Cut)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MainDiamond[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MainDiamond[0].Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.MainDiamond.Count == 0)
        {
            <tr>
                <td colspan="5" class="text-danger">No data found</td>
            </tr>
        }
        else
        {
            @foreach (var item in Model.MainDiamond)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Origin)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CaraWeight)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Clarity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Color)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Describe)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cut)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.MainDiamondId">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.MainDiamondId">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.MainDiamondId">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<nav aria-label="Page navigation">
    <ul class="pagination">
        <li class="page-item @if (Model.PageNumber == 1) {
        <text>disabled</text>
}">
            <a class="page-link" href="@Url.Action("Index", "MainDiamonds", new { pageNumber = Model.PageNumber - 1 })">Previous</a>
        </li>

        @for (var i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @if (i == Model.PageNumber) {
        <text>active</text>
}">
                    <a class="page-link" href="@Url.Action("Index", "MainDiamonds", new { pageNumber = i })">@i</a>
                </li>
        }

        <li class="page-item @if (Model.PageNumber == Model.TotalPages) {
        <text>disabled</text>
}">
            <a class="page-link" href="@Url.Action("Index", "MainDiamonds", new { pageNumber = Model.PageNumber + 1 })">Next</a>
        </li>
    </ul>
</nav>
