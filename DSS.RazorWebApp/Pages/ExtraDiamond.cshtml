@page
@model DSS.RazorWebApp.Pages.ExtraDiamondModel
@{
    ViewData["Title"] = "Extra Diamond List";
    var extraDiamonds = Model.ExtraDiamonds;
}
<div class="text-center">
    <h1 class="display-6">ExtraDiamond management</h1>
</div>

<div class="row">
    <div class="col-md-12 text-end">
        <button type="button" class="btn btn-primary" onclick="add();">
            Add
        </button>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr class="card-header">
                    <th class="card-title text-center">Name</th>
                    <th class="card-title text-center">Title</th>
                    <th class="card-title text-center">Quantity</th>
                    <th class="card-title text-center">Price</th>
                    <th class="card-title text-center">Status</th>
                    <th class="card-title text-center"></th>
                </tr>
            </thead>
            <tbody class="tblextraDiamondList">
                @if (extraDiamonds.Count > 0)
                {
                    foreach (var extraDiamond in extraDiamonds)
                    {
                        <tr>
                            <td>@extraDiamond.Name</td>
                            <td>@extraDiamond.Title</td>
                            <td>@extraDiamond.Quantity</td>
                            <td>@extraDiamond.Price</td>
                            <td>@extraDiamond.Status</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="extraDiamondModal" tabindex="-1" aria-labelledby="extraDiamondModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            @using (Html.BeginForm(null, null, FormMethod.Post, new { name = "frm", id = "frm" }))
            {
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title" id="extraDiamondModalLabel">ExtraDiamond Transaction</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div id="extraDiamondModalContent"></div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group row">
                                <div class="col-md-6">
                                    <label for="1">Name</label>
                                    <input asp-for="ExtraDiamond.Name" class="form-control" />
                                </div>
                                <div class="col-md-6">
                            <label for="1">Status</label>
                            <input asp-for="ExtraDiamond.Status" type="checkbox" />
                            <input type="checkbox" id="ExtraDiamond_Status" name="ExtraDiamond.Status" class="form-check-input" />
                                    @*<input type="hidden" id="ExtraDiamond_Status" value="@Model.ExtraDiamond?.Status" />*@
                            </div> 
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group row">
                                <div class="col-md-4">
                                    <label for="1">Title</label>
                                    <input asp-for="ExtraDiamond.Title" class="form-control" />
                                </div>
                                <div class="col-md-4">
                                    <label for="1">Quantity</label>
                                    <input asp-for="ExtraDiamond.Quantity" class="form-control" />
                                </div>
                                <div class="col-md-4">
                                    <label for="1">Price</label>
                                    <input asp-for="ExtraDiamond.Price" class="form-control" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <label>@Model.Message</label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="btSave" type="submit" class="btn btn-primary">Save</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            }
        </div>
    </div>
</div>

@section scripts
{
    <script type="text/javascript">
        function add() {
            $('#extraDiamondModal').modal('show');
        }
    </script>
}