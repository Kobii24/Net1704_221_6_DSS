@page
@model DSS.RazorWebApp.Pages.Temp.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<p>
    @using (Html.BeginForm("/Index", "Home", FormMethod.Get))
    {
        <div style="display: flex; flex-wrap: wrap; gap: 10px; align-items: center;">
            <div style="flex: 1; min-width: 150px;">
                <label for="SearchName"><b>Name:</b></label>
                @Html.TextBox("SearchName", "", htmlAttributes: new { @class = "form-control", @id = "SearchName" })
            </div>
            <div style="flex: 1; min-width: 150px;">
                <label for="SearchMaterial"><b>Material:</b></label>
                @Html.TextBox("SearchMaterial", "", htmlAttributes: new { @class = "form-control", @id = "SearchMaterial" })
            </div>
            <div style="flex: 1; min-width: 150px;">
                <label for="SearchGender"><b>Gender:</b></label>
                @Html.TextBox("SearchGender", "", htmlAttributes: new { @class = "form-control", @id = "SearchGender" })
            </div>
            <div style="flex: 1; min-width: 150px;">
                <label for="SearchOrigin"><b>Origin:</b></label>
                @Html.TextBox("SearchOrigin", "", htmlAttributes: new { @class = "form-control", @id = "SearchOrigin" })
            </div>
            <div style="flex: 1; min-width: 150px;">
                <label for="SearchComplexibility"><b>Complexibility:</b></label>
                @Html.TextBox("SearchComplexibility", "", htmlAttributes: new { @class = "form-control", @id = "SearchComplexibility" })
            </div>
            <div style="flex: 0 0 auto; align-self: flex-end;">
                <input class="btn btn-success" type="submit" value="Search" />
            </div>
        </div>
    }
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DiamondShell[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiamondShell[0].Material)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiamondShell[0].Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiamondShell[0].Origin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiamondShell[0].Complexibility)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiamondShell[0].WaitingTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiamondShell[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiamondShell[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiamondShell[0].Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.DiamondShell) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Material)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Origin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Complexibility)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WaitingTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.DiamondShellId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.DiamondShellId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.DiamondShellId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<nav aria-label="Page navigation">
    <ul class="pagination">
        <li class="page-item @if (Model.PageNumber == 1) {
        <text>disabled</text>
}">
            <a class="page-link" href="@Url.Action("Index", "DiamondShells", new { pageNumber = Model.PageNumber - 1 })">Previous</a>
        </li>

        @for (var i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @if (i == Model.PageNumber) {
        <text>active</text>
}">
                        <a class="page-link" href="@Url.Action("Index", "DiamondShells", new { pageNumber = i })">@i</a>
                </li>
        }

        <li class="page-item @if (Model.PageNumber == Model.TotalPages) {
        <text>disabled</text>
}">
            <a class="page-link" href="@Url.Action("Index", "DiamondShells", new { pageNumber = Model.PageNumber + 1 })">Next</a>
        </li>
    </ul>
</nav>
