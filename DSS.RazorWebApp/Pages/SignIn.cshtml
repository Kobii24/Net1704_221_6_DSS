@page
@model DSS.RazorWebApp.Pages.SignInModel
@{
}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h3>
        Sign In
    </h3>
        @Model.Msg
    <form method="post" asp-page="SignIn">
        <table>
            <tr>
                <td>UserEmail</td>
                <td>
                    <input asp-for="@Model.customer.Email" />
                </td>
            </tr>
            <tr>
                <td>
                    Password
                </td>
                <td>
                    <input type="password" asp-for="@Model.customer.Password" />
                </td>
            </tr>
            <tr>
                <td>&nbsp;</td>
                <td>
                    <input class="btn btn-primary" type="submit" value="Login" />
                    <a class="btn btn-secondary" asp-page="/SignUpPage/SignUp">Sign up</a>
                </td>
            </tr>
        </table>
    </form>
</body>
</html>